        "mgmt1": {
            "Type": "AWS::EC2::Instance",
            "DependsOn" : ["TokenBucket", "web1", "database1"],
            "Properties": {
                "InstanceType": "t2.micro",
                "ImageId": "ami-22ce4934",
                "IamInstanceProfile": {
                  "Ref": "S3InstanceProfile"
                },
                "KeyName": {
                    "Ref": "KeyName"
                },
                "NetworkInterfaces": [
                    {
                        "GroupSet": [
                            {
                                "Ref": "WebServerSecurityGroup"
                            }
                        ],
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "DeleteOnTermination": "true",
                        "SubnetId": {
                            "Ref": "publicSubnet"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "mgmt1"
                    }
                ],
                "UserData" : {
                  "Fn::Base64" : {
                    "Fn::Join" : [
                      "", [
                        "#!/bin/bash -xe\n",
                        "yum update -y\n",
                        "yum install ansible --enablerepo=epel -y\n",
                        "yum install git -y\n",
                        "echo \"web1 ansible_host=", {"Fn::GetAtt" : ["web1","PrivateIp"]}, " ansible_user=ec2-user ansible_ssh_private_key_file=/home/ec2-user/.ssh/web1-key.pem\" > /etc/ansible/hosts\n",
                        "echo \"database1 ansible_host=", {"Fn::GetAtt" : ["database1","PrivateIp"]}, " ansible_user=ec2-user ansible_ssh_private_key_file=/home/ec2-user/.ssh/database1-key.pem\" >> /etc/ansible/hosts\n",
                        "echo \"[defaults]\" > /etc/ansible/ansible.cfg\n",
                        "echo \"inventory = /etc/ansible/hosts\" >> /etc/ansible/ansible.cfg\n",
                        "echo \"host_key_checking = False\" >> /etc/ansible/ansible.cfg\n",
                        "aws s3 cp s3://", { "Fn::Select" : [ "0", { "Fn::Split" : [ ".", {"Fn::GetAtt": ["TokenBucket","DomainName"]}] }] }, "/web1-key.pem /home/ec2-user/.ssh/web1-key.pem\n",
                        "aws s3 cp s3://", { "Fn::Select" : [ "0", { "Fn::Split" : [ ".", {"Fn::GetAtt": ["TokenBucket","DomainName"]}] }] }, "/database1-key.pem /home/ec2-user/.ssh/database1-key.pem\n"
                      ]
                    ]
                  }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "58cfe257-cba1-44b9-9e3c-82bb4696685a"
                }
            }
        },
